<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Curso_App_Shell_Xamarin.Views.MenuItemsPage"
             Title="Menu Principal">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Acerca de" Order="Secondary"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center"
                     VerticalOptions="Center">
            <Button Text="SUMA" Command="{Binding OnNavigationCommand}"></Button>
            <Button Text="DEMO" Command="{Binding OnNavigationCommandDemo}"></Button>
            <Button Text="PELICULAS" Command="{Binding OnNavigationCommandPeliculas}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>